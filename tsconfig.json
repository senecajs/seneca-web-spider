{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true,
    "module": "ES2022",
    "noEmitOnError": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "target": "ES2022",
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
  },
  "exclude": ["test", "dist", "node_modules"],
  "include": ["./src/**/*"]
}
